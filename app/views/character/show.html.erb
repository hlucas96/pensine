<div class="container">
  <div class="row">
    <div class="jumbotron col-sm-offset-2 col-sm-8 col-xs-12">
      <div class="row">
        <div class="col-sm-3 col-xs-5">
          <%= image_tag @character.avatar.url, class: "character-avatar img-circle" %>
        </div>
        <div class="col-sm-9 col-xs-7">
          <h1><%= @character.name %></h1>
          <h5>Version originale : <i><%= @character.name_en %></i></h5>
        </div>
      </div>
    </div>
  </div>
  <%= render partial: "quotes/quote", collection: @quotes_tab %>
</div>
