<div class="container">
  <div class="row">
    <div class="jumbotron col-sm-offset-2 col-sm-8 col-xs-12">
      <div class="row">
        <div class="col-sm-3 col-xs-5">

        </div>
        <div class="col-sm-9 col-xs-7">
          <h2><%= @entity.title %></h2>
          <h5>Version originale : <i><%= @entity.title_en %></i></h5>
        </div>
      </div>
      <div class="row">
        <div class="progress">
          <% pourcent = @chapters.length %>
          <% @chapters.each do %>
            <div class="progress-bar progress-bar-success" style="width: <%= pourcent %>%;">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render partial: "quotes/quote", collection: @quotes_tab %>
</div>
