<div class="container">
  <div class="row">
    <div class="jumbotron col-sm-offset-2 col-sm-8 col-xs-12">
      <div class="row">
        <div class="col-sm-3 col-xs-5">

        </div>
        <div class="col-sm-9 col-xs-7">
          <h4><%= link_to @chapter.entity.title, controller: :entity, action: :show, id: @chapter.entity_id %></h4>
          <h2>Chapitre <%= @chapter.chapter_id %></h2>
          <h3><%= @chapter.title %></h3>
          <h5>Version originale : <i><%= @chapter.title_en %></i></h5>
        </div>
        <div class="row">
          <h4>Les chapitres de <%= @chapter.entity.title %>:</h4>
          <div class="progress entity">
            <%= render partial: "chapter", collection: @chapters_tab %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render partial: "quotes/quote", collection: @quotes_tab %>
</div>
